package mySwitch;

import java.util.Scanner;

public class ClassMyGradeIfElse {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Scanner sc = new Scanner (System.in);
		
		System.out.print("Please enter grade from A,B,C,D,E,F : ");		
		String name = sc.next();
        char grade = name.charAt(0);
		
		if (grade == 'A')
			System.out.println("Your marks >=90");
		else if (grade == 'B')
			System.out.println("Your marks >=80 and less than 90");
		else if (grade == 'C')
			System.out.println("Your marks >=70 and less than 80");
		else if (grade == 'D')
			System.out.println("your marks >=60 and less than 70");
		else if (grade == 'E')
			System.out.println("Your marks >=50 and less than 60");
		else if (grade == 'F')
			System.out.println("Your marks <=40");
		else
			System.out.println("Invalid grade");
		
		sc.close();
	}

}
